{
    "name": "kipito/orm",
    "description": "A lightweight PHP ORM library for database interactions",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kipito\\Orm\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Kipito",
            "email": "contact@kipito.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "psr/log": "^1.0|^2.0|^3.0",
        "doctrine/inflector": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Kipito\\Orm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "analyse": "phpstan analyse src --level=8"
    },
    "config": {
        "sort-packages": true
    }
}